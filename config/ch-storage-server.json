{
    "console": true,
    "daemon": false,
    "run-for": 600000,
    "run-forever": false,
    "server": {
        "port": 8888
    },
    "storage": {
        "root": "./data"
    },
    "streams": [
        {
            "name": "living-room-1",
            "path": "/security/camera/media/living-1/*"
        },
        {
            "name": "room-1",
            "path": "/security/camera/media/room-1/*"
        }
    ],
    "purge": {
        "ttl-s": 60,
        "interval-s": 2
    },
    "camera": {
        "enable": false,
        "device": 0,
        "fps": 25.0,
        "width": 640,
        "height": 480
    },
    "motion-detector": {
        "thread-count": 2,
        "min-area": 4000,
        "static": {
            "enable": false,
            "file": ""
        },
        "render": true,
        "render-delay": 100000,
        "tensorflow": {
           "enable": true,
           "graph": "tensorflow/examples/ch-storage-server/config/tf_files/retrained_graph.pb",
           "labels": "tensorflow/examples/ch-storage-server/config/tf_files/retrained_labels.txt",
           "input-width": 299,
           "input-height": 299,
           "input-mean": 0,
           "input-std": 255,
           "input-layer": "Mul",
           "output-layer": "final_result"
        }
    },
    "notifications": {
        "enable": true,
        "email": {
            "enable":true,
            "thread-count": 2,
            "from": "",
            "to": [""],
            "cc": [""],
            "subject": "Notification | Motion Detection",
            "smtp": {
                "url": "smtp://127.0.0.1"
            },
            "aggregate": 20
        },
        "kafka": {
            "enable": true,
            "connection": "127.0.0.1:9092",
            "topic": "storage-server-notification",
            "partition": 0
        }
    }
}
